generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String
}

model Customers {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  image_url String
}

model Invoices {
  id        Int     @id @default(autoincrement())
  customer_id  Int
  amount     Decimal
  status   String?
  createdAt  DateTime   @default(now())
}

model Revenues {
  id    Int     @id @default(autoincrement())
  month String  @unique
  revenue  Decimal
}